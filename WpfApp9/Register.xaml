<Window x:Class="WpfApp9.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя"/>
            <TextBox Name="UsernameTextBox"/>

            <TextBlock Text="Пароль" Margin="0,10,0,0"/>
            <PasswordBox Name="PasswordBox"/>

            <TextBlock Text="Повторите пароль" Margin="0,10,0,0"/>
            <PasswordBox Name="ConfirmPasswordBox"/>

            <TextBlock Name="CaptchaTextBlock" Margin="0,10,0,0"/>
            <TextBox Name="CaptchaAnswerTextBox"/>

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="0,10,0,0"/>
            <TextBlock Name="StatusTextBlock" Margin="0,10,0,0" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
